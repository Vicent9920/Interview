<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.com.luckytry.interview.main.MainActivity"
    android:gravity="center"
    tools:showIn="@layout/app_bar_test">



    <RelativeLayout
        android:id="@+id/rl_rl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-10dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="正在拼命加载数据" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_ll_mian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#cdcdcd"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <View
               style="@style/ViewStub"/>

            <TextView
                android:id="@+id/tv1"
                style="@style/PartView"
                android:tag="0"
                android:text="第一卷" />



            <View
                style="@style/ViewStub"/>

            <TextView
                android:id="@+id/tv2"
                style="@style/PartView"
                android:tag="1"
                android:text="第二卷" />

            <View
                style="@style/ViewStub"/>

            <TextView
                android:id="@+id/tv3"
                style="@style/PartView"
                android:tag="2"
                android:text="第三卷" />

            <View
                style="@style/ViewStub"/>

            <TextView
                android:id="@+id/tv4"
                style="@style/PartView"
                android:tag="3"
                android:text="第四卷" />

            <View
                style="@style/ViewStub"/>

            <TextView
                android:id="@+id/tv5"
                style="@style/PartView"
                android:tag="4"
                android:text="第五卷" />

            <View
                style="@style/ViewStub"/>

            <TextView
                android:id="@+id/tv6"
                style="@style/PartView"
                android:tag="5"
                android:text="第六卷"/>

            <View
                style="@style/ViewStub"/>

            <TextView
                android:id="@+id/tv7"
                style="@style/PartView"
                android:tag="6"
                android:text="第七卷"/>

            <View
                style="@style/ViewStub"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_rvlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>
